@model core_strength_yoga_products.Models.Product
@{
    var coloursAvailable = string.Join("; ",Model.ProductAttributes.Select(p => p.Colour.ToString()).ToArray().Distinct());
    var sizesAvailable = string.Join("; ", Model.ProductAttributes.Select(p => p.Size.ToString()).ToArray().Distinct());
    var productTypeId = ViewData["productTypeId"]??1;
}

<div class="banner-section spad">
    <a href="/Shop/Gallery?productTypeId=@Model.ProductType.Id" <input type="submit" class="primary-btn checkout-btn" /> <i class="fa fa-arrow-left m-2"></i>Back To Gallery</a>

<div class="container-fluid, p-5">
    <div class="row">
        <div class="col-lg-6">
             <div class="single-banner">
                    <a asp-area="" asp-controller="Shop" asp-action="Product"
           asp-route-productId=@Model.Id>
            <img src=@Model.Image.Path alt=@Model.Image.Alt asp-append-version="true" />
        </a>
    </div>
</div>
    <div class="col-lg-6">
        <div class="inner-text">
            <h4>@Model.Name</h4>
            <p>€@Model.FullPrice.ToString("0.00")</p>
            <p>@Model.Description</p>
            <p>Colours Available: @coloursAvailable</p>
            <p>Sizes Available: @sizesAvailable</p>
        </div>
        <div>
            @await Html.PartialAsync("ProductPreviewFormPartial.cshtml", Model)
        </div>
    </div>
</div>
</div>
</div>



