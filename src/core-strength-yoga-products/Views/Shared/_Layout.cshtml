@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Core Strength Yoga Products</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!--link rel="stylesheet" href="~/core_strength_yoga_products.styles.css" asp-append-version="true" /-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <!-- Google Font -->
        <link href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <!--external javascript-->
    <script src="https://kit.fontawesome.com/177a1325c3.js" crossorigin="anonymous"></script>
    <!-- Css Styles -->
    <link rel="stylesheet" href="~/css/style.css" type="text/css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css">
        <link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css">
        <link rel="stylesheet" href="~/css/themify-icons.css" type="text/css">
        <link rel="stylesheet" href="~/css/elegant-icons.css" type="text/css">
        <link rel="stylesheet" href="~/css/owl.carousel.min.css" type="text/css">
        <link rel="stylesheet" href="~/css/nice-select.css" type="text/css">
        <link rel="stylesheet" href="~/css/jquery-ui.min.css" type="text/css">
        <link rel="stylesheet" href="~/css/slicknav.min.css" type="text/css">
   
</head>
<body>
    @{
        ViewData["Title"] = "Home Page";
    }

<header class="header-section">
    <div class="header-top">
        <div class="container">
            <div class="ht-left">
                <div class="mail-service">
                    <i class=" fa fa-envelope"></i>
                    corestrengthyoga@gmail.com
                </div>
                <div class="phone-service">
                    <i class=" fa fa-phone"></i>
                    +353 12345678
                </div>
            </div>
            <div class="ht-right">
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </div>
    <div id="popupContainer" class="hidden">
      <div id="popupBox" class="hidden">
        <div id="messageBox">This is a generic message</div>
      </div>
    </div>
    <div class="container">
        <div class="inner-header">
            <div class="row">
                <div class="col-lg-2 col-md-2">
                    <div class="logo">
                        <a asp-controller="Home">
                            Core Strength Shop
                        </a>
                    </div>
                </div>
                <div class="col-lg-7 col-md-7">
                    <div class="advanced-search">
                        <button type="button" class="category-btn">All Categories</button>
                        <form asp-controller="Shop" asp-action="Search" method="post">
                        <div class="input-group">
                            <input type="text" name="query" id="query" placeholder="What do you need?"/>
                            <button type="submit"><i class="ti-search"></i></button>
                        </div>
                            </form>
                    </div>
                </div>
                <div class="col-lg-3 text-right col-md-3">
                    <ul class="nav-right">
                        <li class="cart-price"><a href="/Basket" class="primary-btn checkout-btn" id="cart-btn"></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="nav-item">
        <div class="container">
            <div class="nav-depart">
                <div class="depart-btn">
                    <i class="ti-menu"></i>
                    <span>All departments</span>
                    <ul class="depart-hover">
                            <li><a asp-area="" asp-controller="Shop" asp-action="FilterProducts" asp-route-ProductTypeId="1">Mats</a></li>
                            <li><a asp-area="" asp-controller="Shop" asp-action="FilterProducts" asp-route-ProductTypeId="3">Blocks</a></li>
                            <li><a asp-area="" asp-controller="Shop" asp-action="FilterProducts" asp-route-ProductTypeId="7">Bolsters</a></li>
                            <li><a asp-area="" asp-controller="Shop" asp-action="FilterProducts" asp-route-ProductTypeId="4">Tops</a></li>
                            <li><a asp-area="" asp-controller="Shop" asp-action="FilterProducts" asp-route-ProductTypeId="5">Bottoms</a></li>
                            <li><a asp-area="" asp-controller="Shop" asp-action="FilterProducts" asp-route-ProductTypeId="6">Footwear</a></li>
                            <li><a asp-area="" asp-controller="Shop" asp-action="FilterProducts" asp-route-ProductTypeId="2">Accessories</a></li>
                    </ul>
                </div>
            </div>
            <nav class="nav-menu mobile-menu">
                <ul>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Shop" asp-action="Index">Shop</a></li>
                    <li><a>Collection</a>
                        <ul class="dropdown">
                                <li><a asp-area="" asp-controller="Shop" asp-action="FilterProducts" asp-route-genderId="2">Men's</a></li>
                                <li><a asp-area="" asp-controller="Shop" asp-action="FilterProducts" asp-route-genderId="3">Women's</a></li>
                        </ul>
                    </li>
                    <li><a href="https://www.ekhartyoga.com/articles/browse_all">Blog</a></li>
                    @*<li><a href="#">Contact</a></li>*@
                    @*<li><a href="#">Pages</a>
                        <ul class="dropdown">
                            <li><a href="https://www.ekhartyoga.com/articles/browse_all">Blog Details</a></li>
                            <li><a href="#">Shopping Cart</a></li>
                            <li><a href="#">Checkout</a></li>
                            <li><a href="#">Faq</a></li>
                            <li><a href="#">Register</a></li>
                            <li><a href="#">Login</a></li>
                        </ul>
                    </li>*@
                    @if (GlobalData.isAdmin)
                    {
                        <li><a asp-controller="Admin" asp-action="Index">Admin</a></li>
                    }
                </ul>
            </nav>
            <div id="mobile-menu-wrap"></div>
        </div>
    </div>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

<footer class="footer-section">
  <div class="container">
      <div class="row">
          <div class="col-lg-3">
              <div class="footer-left">
                  <div class="footer-logo">
                      <a asp-controller="Home">Core Strength Yoga</a>
                  </div>
                  <ul>
                      <li>Address: 123 Nowhere Road</li>
                      <li>Phone: +353 012345678</li>
                      <li>Email: corestrength@gmail.com</li>
                  </ul>
                  <div class="footer-social">
                      <a asp-controller="Home"><i class="fa fa-facebook"></i></a>
                      <a asp-controller="Home"><i class="fa fa-instagram"></i></a>
                      <a asp-controller="Home"><i class="fa fa-twitter"></i></a>
                      <a asp-controller="Home"><i class="fa fa-pinterest"></i></a>
                  </div>
              </div>
          </div>
          <div class="col-lg-2 offset-lg-1">
              <div class="footer-widget">
                  <h5>Information</h5>
                  <ul>
                      <li><a href="#" onclick="showPopup()">About Us</a></li>
                      <li><a asp-controller="Home">Checkout</a></li>
                      <li><a asp-controller="Home">Contact</a></li>
                      <li><a asp-controller="Home">Serivius</a></li>
                  </ul>
              </div>
          </div>
          <div class="col-lg-2">
              <div class="footer-widget">
                  <h5>My Account</h5>
                  <ul>
                      <li><a asp-controller="Home">My Account</a></li>
                      <li><a asp-controller="Home">Contact</a></li>
                      <li><a asp-controller="Home">Shopping Cart</a></li>
                      <li><a asp-area="" asp-controller="Shop" asp-action="Index">Shop</a></li>
                  </ul>
              </div>
          </div>
          <div class="col-lg-4">
              <div class="newslatter-item">
                  <h5>Join Our Newsletter Now</h5>
                  <p>Get E-mail updates about our latest shop and special offers.</p>
                  <form action="#" class="subscribe-form">
                      <input type="text" placeholder="Enter Your Mail" />
                      <button type="button">Subscribe</button>
                  </form>
              </div>
          </div>
      </div>
  </div>
  <div class="copyright-reserved">
      <div class="container">
          <div class="row">
              <div class="col-lg-12">
                  <div class="copyright-text">

Copyright &copy;2021 All rights reserved | This website is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by Susan, Keith & David
                  </div>
                  <div class="payment-pic">
                      <img src="~/images/payment-method.png" alt="" />
                  </div>
              </div>
          </div>
      </div>
  </div>
</footer>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/jquery.countdown.min.js"></script>
    <script src="~/js/jquery.nice-select.min.js"></script>
    <script src="~/js/jquery.zoom.min.js"></script>
    <script src="~/js/jquery.dd.min.js"></script>
    <script src="~/js/jquery.slicknav.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
<script src="~/js/main.js"></script>

<script>
 function showPopup() {
        var popupBox = document.getElementById('popupBox');
        console.log("popup clicked");
        popupBox.classList.remove('hidden');
        setTimeout(function () {
            popupBox.classList.add('hidden');
        }, 2000);
    }
</script>

    <script type="text/javascript">
        document.getElementById('cart-btn').innerHTML = '@HttpContextAccessor.HttpContext.Session.GetString("cartTotal") <i class="fa-solid fa-basket-shopping m-2"></i>';
    </script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
